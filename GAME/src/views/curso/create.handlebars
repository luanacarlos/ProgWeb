<h2 style=" margin: 20px 0px 20px 120px">Adicionar Curso 
  <a href="/curso" class="btn btn-primary">Voltar</a>
  </h2>
<div class="container">
    <div class="row">
        <div class="col-8">
          <form action="/curso/create" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">

              <div class="form-group">
                <label for="sigla">Sigla do curso</label>
                <input type="text" class="form-control" id="sigla" name="sigla" aria-describedby="emailHelp" placeholder="Ex: IE07">
                <small class="form-text text-muted">Em caso de dúvida, verifique no site da UFAM</small>
              </div>

              <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" aria-describedby="emailHelp" placeholder="Ex: Ciência da Computação" value="{{curso.nome}}">
                <small class="form-text text-muted">Nome do curso</small>
                {{!-- <div class="invalid-feedback">{{showError errors 'nome'}}</div> --}}
              </div>

              <div class="form-group">
                <label for="descricao">Descrição do curso. </label>
                <textarea class="form-control" id="descricao" name="descricao" rows="3"></textarea>
              </div>

            <fieldset class="form-group">
              <legend>Áreas da Ciência</legend>
              <div class="form-check">
                <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="area" id="area" value="1" checked="">
                  Ciências Exatas. Ex: Computação, Matemática, Estatistica, etc.
                </label>
              </div>
              <div class="form-check">
                <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="area" id="area" value="2">
                  Ciências Humanas: Ex: Letras, História, Psicologia, etc.
                </label>
              </div>
              <div class="form-check">
                <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="area" id="area" value="3">
                  Ciências Biológicas: Ex: Medicina, Odonto, Agronomia, etc.
                </label>
              </div>
            </fieldset>
            
            <button type="submit" class="btn btn-primary">Adicionar Curso</button>
          </form>
        </div>
      </div>
    </div>